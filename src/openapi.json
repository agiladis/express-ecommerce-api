{
  "openapi": "3.0.0",
  "info": {
    "title": "Simple E-Commerce API",
    "description": "API documentation for a simple e-commerce platform. Provides authentication, product management, cart operations, and order processing.",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@ecommerce.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    },
    {
      "url": "https://api.ecommerce.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Endpoints for user authentication"
    },
    {
      "name": "Products",
      "description": "Endpoints for managing products"
    },
    {
      "name": "Carts",
      "description": "Endpoints for managing the shopping cart"
    },
    {
      "name": "Orders",
      "description": "Endpoints for order management"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "User's unique ID"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "phone_number": {
            "type": "string"
          },
          "date_of_birth": {
            "type": "string",
            "format": "date"
          },
          "address": {
            "type": "string"
          },
          "gender": {
            "type": "string",
            "enum": [
              "MALE",
              "FEMALE"
            ]
          },
          "is_verified": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "email",
          "password"
        ],
        "example": {
          "id": "123e4567-e89b-12d3-a456-426614174000",
          "email": "user@example.com",
          "first_name": "John",
          "last_name": "Doe",
          "phone_number": "1234567890",
          "date_of_birth": "1990-01-01",
          "gender": "MALE",
          "is_verified": true,
          "created_at": "2023-09-23T18:25:43.511Z"
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number",
            "format": "float"
          },
          "stock": {
            "type": "integer"
          },
          "category_id": {
            "type": "string",
            "format": "uuid"
          },
          "is_avail": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "name",
          "price",
          "stock",
          "category_id"
        ],
        "example": {
          "id": "123e4567-e89b-12d3-a456-426614174000",
          "name": "Laptop",
          "imageUrl": "https://example.com/laptop.jpg",
          "description": "High-performance laptop",
          "price": 1200.99,
          "stock": 50,
          "category_id": "987e4567-e89b-12d3-a456-426614174000",
          "is_avail": true,
          "created_at": "2023-09-23T18:25:43.511Z"
        }
      },
      "Cart": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "user_id": {
            "type": "string",
            "format": "uuid"
          },
          "is_empty": {
            "type": "boolean"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "user_id"
        ],
        "example": {
          "id": "123e4567-e89b-12d3-a456-426614174000",
          "user_id": "987e4567-e89b-12d3-a456-426614174000",
          "is_empty": false,
          "created_at": "2023-09-23T18:25:43.511Z"
        }
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/api/v1/auth/register": {
      "post": {
        "summary": "Register a new user",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully registered"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "summary": "Log in a user",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                },
                "required": [
                  "email",
                  "password"
                ],
                "example": {
                  "email": "user@example.com",
                  "password": "password123"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged in"
          },
          "401": {
            "description": "Unauthorized, invalid credentials"
          }
        }
      }
    },
    "/api/v1/products": {
      "get": {
        "summary": "Get all products",
        "tags": [
          "Products"
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved list of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/carts": {
      "get": {
        "summary": "View cart",
        "tags": [
          "Carts"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved cart"
          },
          "404": {
            "description": "Cart not found"
          }
        }
      },
      "post": {
        "summary": "Add product to cart",
        "tags": [
          "Carts"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Product and quantity to add to cart",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "product_id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "quantity": {
                    "type": "integer"
                  }
                },
                "required": [
                  "product_id",
                  "quantity"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product successfully added to cart"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    }
  }
}